<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <Version>0.1.1</Version>
    <ReleaseVersion>0.1.1</ReleaseVersion>
    <SynchReleaseVersion>true</SynchReleaseVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Scripts\Mac\Script1.tg" />
    <None Remove="Scripts\Windows\Script1.tg" />
    <None Remove="Scripts\CSV.layout" />
    <None Remove="Scripts\_Layouts\CSV.layout" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Scripts\Mac\Script1.tg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Scripts\Windows\Script1.tg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Scripts\_Layouts\CSV.layout">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="NLog" Version="4.5.10" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Results\" />
    <Folder Include="Util\" />
    <Folder Include="Scripts\_Layouts\" />
  </ItemGroup>
  <ItemGroup>
    <None Update="telegen">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
